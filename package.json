{
  "name": "webpack-rails-demo",
  "version": "0.0.0",
  "description": "Show rails using webpack as its asset manager.",
  "repository": "https://github.com/ddgromit/webpack-rails-demo",
  "scripts": {
    "watch": "webpack -w --config webpack/config.js --progress --profile --colors",
    "dev": "webpack-dev-server --config webpack/config.dev.js",
    "build-for-production": "webpack --config webpack/config.prod.js --progress --profile --colors",
    "postinstall": "npm run build-for-production"
  },
  "author": "Derek Dahmer",
  "dependencies": {
    "babel": "^5.5.8",
    "babel-core": "^5.5.8",
    "babel-loader": "^5.1.4",
    "jquery": "^2.1.4",
    "webpack": "^1.9.11"
  },
  "devDependencies": {
    "webpack-dev-server": "^1.9.0"
  }
}
